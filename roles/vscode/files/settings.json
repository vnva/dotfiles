{
  // UI Settings
  "window.titleBarStyle": "native",
  "workbench.sideBar.location": "right",
  "window.menuBarVisibility": "hidden",
  "workbench.iconTheme": "vscode-jetbrains-icon-theme-2023-dark",
  "editor.stickyScroll.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "git.blame.editorDecoration.enabled": true,
  "update.showReleaseNotes": false,

  // Fonts
  "editor.fontFamily": "ZedMono Nerd Font",
  "editor.fontSize": 14,
  "terminal.integrated.fontFamily": "'ZedMono Nerd Font'",
  "terminal.integrated.fontSize": 14,
  "editor.fontLigatures": true,
  "terminal.integrated.fontLigatures": true,

  // Misc
  "keyboard.dispatch": "keyCode",

  // Editing
  "editor.tabSize": 2,
  "files.insertFinalNewline": true,
  "git.openRepositoryInParentFolders": "always",
  "editor.formatOnSave": true,
  "[yaml]": { "editor.defaultFormatter": "redhat.vscode-yaml" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[scss]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[mdx]": {
    "editor.wordWrap": "on"
  },

  // Prettier
  "prettier.enable": true,
  "prettier.singleQuote": true,
  "prettier.useTabs": false,
  "prettier.printWidth": 120,
  "prettier.tabWidth": 2,
  "prettier.semi": true,

  // Extensions
  "cSpell.enabled": false,
  "workbench.startupEditor": "none",
  "extensions.ignoreRecommendations": true,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Temp
  "css.validate": false,
  "chat.commandCenter.enabled": false,
  "vue.server.hybridMode": "typeScriptPluginOnly",
  "roo-cline.allowedCommands": ["npm test", "npm install", "tsc", "git log", "git diff", "git show"],
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "workbench.colorTheme": "Oscura Dusk"
  // "debug.javascript.terminalOptions": {
  //   "command": "proxy-ns npm start"
  // }
}
